<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="card card-block">
                <form action="/newservice" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-2">
                                <span class="form-service-label">Title</span>
                            </div>
                            <div class="col-xs-10">
                                <input class="form-control" id="titleNewService" placeholder="Serive Title Max 30 Characters..." type="text" name="title">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-2">
                                <span class="form-service-label">Price</span>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label class="sr-only" for="exampleInputAmount">Amount (in dollars)</label>
                                    <div class="input-group">
                                        <div class="input-group-addon">$</div>
                                        <input type="text" class="form-control" id="exampleInputAmount" placeholder="Amount">
                                        <div class="input-group-addon">.00</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-2">
                                <span class="form-service-label">Image</span>
                            </div>
                            <div class="col-xs-4">
                                <label class="file">
                                    <input type="file" name="image" id="file">
                                    <span class="file-custom"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-2">
                                <span class="form-service-label">Youtube URL</span>
                            </div>
                            <div class="col-xs-10">
                                <input class="form-control" id="titleNewService" placeholder="Improve conversion by showing your service off as a youtube video..." type="text" name="youtubeUrl">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-2">
                                <span class="form-service-label">Category</span>
                            </div>
                            <div class="col-xs-8">
                                <fieldset class="form-group">
                                    <select class="form-control form-control-lg" name="category" style="margin-top: 1.2%;" id="exampleSelect1">
                                        <option value="photography">1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-2">
                                <span class="form-service-label">Description</span>
                            </div>
                            <div class="col-xs-10">
                                <fieldset class="form-group">
                                    <textarea class="form-control" id="exampleTextarea" name="description" rows="6" placeholder="Enter A Description For Your Service"></textarea>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-2">
                                <span class="form-service-label">Service Time</span>
                            </div>
                            <div class="col-xs-3">
                                <div class="form-group">
                                    <label class="sr-only" for="exampleInputAmount">Amount (in dollars)</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="exampleInputAmount" name="dueDate" placeholder="">
                                        <div class="input-group-addon">Days</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="form-group">
                                <div class="col-xs-2">
                                    <span class="form-service-label">Refund Time</span>
                                </div>
                                <div class="col-xs-8">
                                    <fieldset class="form-group">
                                        <select class="form-control form-control-lg" name="refund" style="margin-top: 1.2%;" id="exampleSelect1">
                                            <option value="30">30 Days</option>
                                            <option value="45">45 Days</option>
                                            <option value="90">90 Days</option>
                                            <option value="180">180 Days</option>
                                            <option value="365">365 Days</option>
                                        </select>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>