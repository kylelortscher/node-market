<% include ../partials/header %>
<div class="container">
    <div class="row">
        <% for(var i = 0; i < services.length; i++){ %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="card">
                <a href="/product-show"><img class="card-img-top" src="https://static.pexels.com/photos/9416/light-car-display-shop-large.jpg" alt="Card image cap"></a>
                <div class="card-block">
                    <a href="/product-show" style="text-decoration: none;"><p class="card-text"><%= services[i].title %></p></a>
                    <hr>
                    <div class="bottom-card-content">
                        <% if(currentUser == null) { %>
                        <a href="/signup"><span class="price">Register To See Price</span></a><br>
                        <% } else { %>
                        <p>$<%= services[i].price %></p>
                        <% } %>
                        <hr>
                        <i class="fa fa-star 2x" aria-hidden="true"></i>
                        <i class="fa fa-star 2x" aria-hidden="true"></i>
                        <i class="fa fa-star 2x" aria-hidden="true"></i>
                        <i class="fa fa-star 2x" aria-hidden="true"></i>
                        <i class="fa fa-star-half" aria-hidden="true"></i>
                        <div class="rating">4.7/5 217 Total Ratings</div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>
<% include ../partials/footer %>