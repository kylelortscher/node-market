<% include ../partials/header %>
<div class="container">
    <div class="card card-block">
        <img alt="username" style="height: 125px; width: 125px;margin-left: 45%;" class="avatar" src="https://pixabay.com/static/uploads/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png">
        <h2 style="font-weight: 700;text-align: center">Conversation With <%= receiver.username %></h2>
    </div>
    <div class="card card-block">
        <div class="row">
            <div class="form-group">
                <div class="col-xs-1">
                    Body
                </div>
                <div class="col-xs-11">
                    <form action="/message/<%= receiver.username%>" method="post">
                        <fieldset class="form-group">
                            <textarea class="form-control" name="body" rows="6" placeholder="Ask about a service using phone numbers, email addresses, and websites are not allowed!"></textarea>
                        </fieldset>
                        <div class="row">
                            <div class="col-xs-6 col-xs-offset-3">
                                <button type="submit" class="btn btn-primary btn-block">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>